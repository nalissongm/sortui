{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@module/*": [
        "module/*"
      ],
      "@config/*": [
        "config/*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}